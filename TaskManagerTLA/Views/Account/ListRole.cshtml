@model IEnumerable<TaskManagerTLA.Models.RoleModel>

@{
    ViewData["Title"] = "Список ролей";
}

<h1>Список можливих ролей</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserRole)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserRole)
                </td>
                <td>
                    @Html.ActionLink("Вибрати", "ChangeRole", new { UserId = ViewBag.UserId, role = item.UserRole })
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="ListUser">Список користувачів</a>
</div>
