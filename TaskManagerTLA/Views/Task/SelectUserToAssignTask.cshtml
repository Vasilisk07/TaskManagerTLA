@model IEnumerable<TaskManagerTLA.Models.UserViewModel>

@{
    ViewData["Title"] = "Додати користувача";
}

<h2>Додати користувача до задачі @ViewBag.TaskName</h2>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role)
                </td>
                <td>

                    @Html.ActionLink("Додати", "AssignTaskToUser", new { userId = item.Id, globalTaskId = ViewBag.globalTaskId }) |
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="TaskList">назад</a>
</div>