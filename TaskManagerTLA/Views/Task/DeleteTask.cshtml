@model TaskManagerTLA.BLL.DTO.GlobalTaskDTO

@{
    ViewData["Title"] = "Видалення задачі";
}

<h1>Видалення задачі</h1>

<h3>Ви впевнені, що хочете видалити данну задачу?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>

    <form asp-controller="Task" asp-action="DeleteTask" asp-route-id="@Model.Id">
        <input type="submit" value="Видалити" class="btn btn-danger" />
        <a class="btn btn-primary" href=" /Task/TaskList">Назад</a>
    </form>
</div>
