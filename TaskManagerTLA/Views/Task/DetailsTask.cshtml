@model IEnumerable<TaskManagerTLA.Models.ATModel>

@{
    ViewData["Title"] = "DetailsTask";
}

<h1>@ViewBag.TaskName</h1>

<p>
    @Html.ActionLink("Додати виконавця", "AddUserInTask", new { id = ViewBag.TaskId })
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ActTaskLeigth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.ActTaskLeigth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>

            <td>
                @Html.ActionLink("Видалити виконавця", "DeleteUserInTask", new { id=item.ActualTaskId, taskId = ViewBag.TaskId })
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <a asp-action="TaskList">Повернутись до задач</a>
</div>