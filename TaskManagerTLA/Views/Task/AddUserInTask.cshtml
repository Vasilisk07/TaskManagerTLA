@model IEnumerable<TaskManagerTLA.Models.UserViewModel>

@{
    ViewData["Title"] = "Додати користувача";
}

<h2>Додати користувача до задачі @ViewBag.TaskName</h2>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserRole)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserRole)
            </td>
            <td>

                @Html.ActionLink("Додати", "AddUser", new { taskId=ViewBag.TaskId, userName=item.UserName }) |
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <a asp-action="TaskList">назад</a>
</div>